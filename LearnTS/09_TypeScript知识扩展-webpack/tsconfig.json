{
  "compilerOptions": {
    
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  // "files": [] 指定哪些ts文件需要进行编译
  // "include": ["./src/**/*.ts", "./types/*.d.ts"]
}
